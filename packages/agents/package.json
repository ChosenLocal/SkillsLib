{
  "name": "@business-automation/agents",
  "version": "1.0.0",
  "description": "AI agent orchestration framework for business automation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agent": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./orchestrator": {
      "types": "./dist/orchestrator/index.d.ts",
      "default": "./dist/orchestrator/index.js"
    },
    "./jobs": {
      "types": "./dist/jobs/index.d.ts",
      "default": "./dist/jobs/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "default": "./dist/shared/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "agent": "tsx cli/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.38.0",
    "@business-automation/database": "workspace:*",
    "@business-automation/schema": "workspace:*",
    "@aws-sdk/client-s3": "^3.651.1",
    "@aws-sdk/s3-request-presigner": "^3.651.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "inngest": "^3.24.0",
    "inquirer": "^8.2.6",
    "ioredis": "^5.3.2",
    "langfuse": "^3.26.0",
    "ora": "^5.4.1",
    "p-queue": "^8.0.1",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.11.19",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
