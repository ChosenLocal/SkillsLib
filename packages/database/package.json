{
  "name": "@business-automation/database",
  "version": "1.0.0",
  "private": true,
  "description": "Database layer with Prisma ORM for multi-tenant architecture",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@business-automation/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "prisma": "^5.9.1",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2"
  }
}
