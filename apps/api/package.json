{
  "name": "@business-automation/api",
  "version": "1.0.0",
  "private": true,
  "description": "Standalone tRPC API server for business automation system",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@business-automation/config": "workspace:*",
    "@business-automation/database": "workspace:*",
    "@business-automation/schema": "workspace:*",
    "@trpc/server": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "superjson": "^2.2.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2"
  }
}
