# API Server Configuration
API_PORT=3001
NODE_ENV=development

# Authentication
# IMPORTANT: Set to 'true' ONLY in development to bypass JWT authentication
# Uses mock user: test@example.com (OWNER role, tenant: test-tenant-id)
# MUST be 'false' or removed in production!
DISABLE_AUTH=false

# Database (shared with web app)
DATABASE_URL="postgresql://admin:devpassword123@localhost:5432/business_automation"

# JWT Authentication
# IMPORTANT: Must match NEXTAUTH_SECRET in apps/web/.env.local
# The web app signs JWT tokens, the API verifies them
NEXTAUTH_SECRET="h+BHQx9Cu9j3Q5lnOFZDUrBPP2rzHPmVYxSPEJ475f8="

# CORS Configuration
# Allow requests from Next.js frontend
CORS_ORIGIN="http://localhost:3000"

# Redis (optional - for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Agent Execution (future use)
MAX_CONCURRENT_AGENTS=100
AGENT_TIMEOUT_MS=300000
